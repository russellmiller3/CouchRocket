<style>
.admin {
    border: 2px solid #a1a1a1;
    padding: 10px 20px;
    background: #dddddd;
    width: 100px;
    border-radius: 25px;
}
</style>

<div class = "admin">
<h4><a href="/Admin">Admin Panel</a></h4> - Hooked up to Mailgun and Twilio for SMS<br>
<a href="/register">Register</a>
</div>
<br><br>
<form action="/AddItem">
    <input type="submit" value="Add Item">
</form>
<br>
<% if @items %>
	<h2>Items for Sale</h2>
	<% @items.each do |item| %>
		<a href="/items/<%= item.id %>">
		<IMG border="1" HEIGHT=50 WIDTH=50 SRC="<%= item.picture1_url %>">
		Sales Page for <%= item.brand %> <%= item.type %></a><br><br>
	<% end %>
<% end %>

